version: "3.8"
services:
  app:
    env_file:
      - ".env"
    image: @DOCKER_REPOSITORY_NAME@:@DOCKER_TAG@
    restart: always
    ports:
      - "8080:8080"
    environment:
      - SPRING_PROFILES_ACTIVE=${PAYPAL_SPRING_PROFILE_ACTIVE:-dev}
      - PWD=/workspace
    volumes:
      - ${PWD}/keys:/home/keys
      - ${PWD}/financial-reports:/home/reports
  smtp:
    image: mailhog/mailhog
    restart: always
    hostname: paypal-hyperwallet-mailhog
    ports:
      - "1025:1025"
      - "8025:8025"
    logging:
      driver: "json-file"
      options:
        max-size: "50m"
